<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/topimg1"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_180sdp"
            android:tint="@color/white"
            android:layout_gravity="center"
            android:src="@drawable/bes_offer"/>

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_22sdp"
            android:fontFamily="@font/constantia"
            android:gravity="center"
            android:text="FOLLOW THE STEPS FOR RESELLING"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:drawableLeft="@drawable/write_icon"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/nanumgothicregular"
            android:gravity="start"
            android:text="Click and select image"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:drawableLeft="@drawable/write_icon"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/nanumgothicregular"
            android:gravity="start"
            android:layout_marginRight="@dimen/_5sdp"
            android:text="Share, your social media platform or source on demand"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableLeft="@drawable/write_icon"
            android:layout_marginLeft="@dimen/_30sdp"
            android:textSize="@dimen/_13sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/nanumgothicregular"
            android:gravity="start"
            android:layout_marginRight="@dimen/_5sdp"
            android:text="Add your margin and place order to your customer address"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:drawableLeft="@drawable/write_icon"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/nanumgothicregular"
            android:gravity="start"
            android:layout_marginRight="@dimen/_5sdp"
            android:text="Earn commission and profit margin on every order"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="@dimen/_5sdp"
            android:drawableLeft="@drawable/write_icon"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/nanumgothicregular"
            android:gravity="start"
            android:text="To learn more to reach to our HELP section watch video"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:layout_margin="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:text="Continue"
        android:background="@null"
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"/>

</RelativeLayout>