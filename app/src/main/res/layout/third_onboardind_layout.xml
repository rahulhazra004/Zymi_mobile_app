<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_180sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/round_border_onboarding"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/cashback" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/constantia"
            android:gravity="center"
            android:text="Hello Our valueable reseller"
            android:textColor="@color/white"
            android:textSize="@dimen/_22sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/constantia"
            android:gravity="center"
            android:text="Get Cashback weely/ monthly on successful order.Cashback depends upon your total order value"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textDirection="ltr"
            android:textSize="@dimen/_13sdp" />


        <TextView
            android:drawablePadding="@dimen/_5sdp"
            android:drawableLeft="@drawable/wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/constantia"
            android:text="Complete more then 6 order in a week get up to FIVE %"
            android:gravity="start|center"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textDirection="ltr"
            android:textSize="@dimen/_13sdp" />
        <TextView
            android:drawablePadding="@dimen/_5sdp"
            android:drawableLeft="@drawable/wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/constantia"
            android:gravity="start|center"
            android:text="Complete more then 15+ order in 2 week get up to TEN %"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textDirection="ltr"
            android:textSize="@dimen/_13sdp" />
        <TextView
            android:drawableLeft="@drawable/wallet"
            android:drawablePadding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/constantia"
            android:gravity="start|center"
            android:text="Complete more then 30 order in a month get up to FIFTEEN %"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textDirection="ltr"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>

</RelativeLayout>