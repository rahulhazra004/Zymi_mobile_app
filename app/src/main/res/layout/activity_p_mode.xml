<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ProgressBar
        android:id="@+id/p_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/payment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/pay_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/apply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Apply Coupon"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <android.support.v7.widget.CardView
                    android:id="@+id/card_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rectangle"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent"
                    tools:targetApi="lollipop">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/tot_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Base Amount :"
                                android:textColor="@color/text"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/total_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="63dp"
                                android:layout_marginLeft="63dp"
                                android:layout_toRightOf="@+id/tot_text"
                                android:text="Rs 401"
                                android:textColor="@color/text"
                                android:textSize="16sp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/shipping_charge_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/shipping_charge_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shipping Charges :"
                                android:textSize="15sp" />


                            <TextView
                                android:id="@+id/shipping_charge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:layout_marginLeft="35dp"
                                android:layout_toRightOf="@+id/shipping_charge_text"
                                android:text="Rs 50"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/cod_charge_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/cod_charge_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="COD Charges :"
                                android:textSize="15sp" />


                            <TextView
                                android:id="@+id/cod_charge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="68dp"
                                android:layout_marginLeft="100dp"
                                android:layout_toRightOf="@+id/cod_charge_text"
                                android:text="Rs 30"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/weight_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/cart_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:text="Your Margin :"
                                android:textColor="@color/text"
                                android:textSize="15sp" />


                            <TextView
                                android:id="@+id/your_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="78dp"
                                android:layout_marginLeft="78dp"
                                android:layout_toRightOf="@+id/cart_weight"
                                android:text="0.0"
                                android:textColor="@color/text"
                                android:textSize="15sp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/total_amount_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/total_amount_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:text="Amount to be Paid :"
                                android:textColor="@color/text"
                                android:textSize="15sp" />


                            <TextView
                                android:id="@+id/total_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="33dp"
                                android:layout_marginLeft="33dp"
                                android:layout_toRightOf="@+id/total_amount_text"
                                android:text="Rs 209"
                                android:textColor="@color/text"
                                android:textSize="15sp" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/weight_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/cart_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:text="Cart Weight :"
                                android:textColor="@color/text"
                                android:textSize="15sp" />


                            <TextView
                                android:id="@+id/weight_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="78dp"
                                android:layout_marginLeft="78dp"
                                android:layout_toRightOf="@+id/cart_weight"
                                android:text="2kg"
                                android:textColor="@color/text"
                                android:textSize="15sp" />


                        </RelativeLayout>


                        <TextView
                            android:id="@+id/nar_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/total_amount"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:text="Set your margin "
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/nar_text_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="COD charges  â“˜"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"
                            android:visibility="gone" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/dr"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:ignore="UselessParent"
                    tools:targetApi="lollipop">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/bt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Bank Transfer"
                            android:textColor="@color/text"
                            android:textSize="16sp" />


                        <View
                            android:id="@+id/devider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/order_id"
                            android:layout_marginLeft="0.5dp"
                            android:layout_marginRight="0.5dp"
                            android:background="@color/devider" />


                        <RelativeLayout
                            android:id="@+id/shipping_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/bnk_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Bank Name - Kotak Mahindra Bank"
                                android:textSize="16sp" />


                            <TextView
                                android:id="@+id/bnk_holder_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/bnk_name"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Bank Holder Name - Umakshi"
                                android:textSize="16sp" />


                            <TextView
                                android:id="@+id/acc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/bnk_holder_name"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Account No - 1111994322"
                                android:textSize="16sp" />


                            <TextView
                                android:id="@+id/ifsc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/acc"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="IFSC - KKBK0003999"
                                android:textSize="16sp" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/total_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/total_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:text="Payable Amount :"
                                android:textColor="@color/text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="65dp"
                                android:layout_toRightOf="@+id/total_text"
                                android:textSize="14sp"
                                tools:text="Rs. 209" />

                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/dr"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent"
                    tools:targetApi="lollipop">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:checked="true"
                            android:id="@+id/cod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="COD"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvCodAlert"
                            android:visibility="gone"
                            android:textColor="@color/green"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:text="Make Online payment and get free shipping." />


                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/dr"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent"
                    tools:targetApi="lollipop">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/op"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Online Payment"
                            android:textSize="16sp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/dr"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent"
                    tools:targetApi="lollipop">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/wallet"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:text="ZyMi Wallet"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/sub_total_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_gravity="center"
                                    android:text="Available Balance :"
                                    android:textColor="@color/text"
                                    android:textSize="14sp" />


                                <TextView
                                    android:id="@+id/sub_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@+id/sub_total_text"
                                    android:text=""
                                    android:layout_gravity="center"
                                    android:textSize="14sp" />
                            </LinearLayout>


                            <View
                                android:visibility="gone"
                                android:id="@+id/alphaView"
                                android:background="@color/white"
                                android:alpha="0.7"
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"/>

                        <View
                            android:id="@+id/devider_"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/order_id"
                            android:layout_marginLeft="0.5dp"
                            android:layout_marginRight="0.5dp"
                            android:background="@color/devider" />


                        <TextView
                            android:id="@+id/nar_text_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/constantia"
                            android:text="After product order parcel dispacth within 48hrs to our courier partners i,e.:Delhivery,Ecom Xpress,Xpressbees,BlueDart,DTDC,India Speed Post,Fedex,Ekart,The Professional etc.
For Choice of courier Service please Contuct us via WhatsApp or Call with your order id. "
                            android:textColor="@color/colorPrimary"
                            android:visibility="gone"
                            android:textSize="@dimen/_12sdp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="Note: Parcel get dispatch within 48hrs after the order is placed"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"/>

                        <TextView
                            android:fontFamily="@font/nanumgothicregular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="1. In Metro Area Delivery Time is: 48 hrs - 72 hrs\n2. In Urban Area Delivery Time is: 3-5 days\n3. In Rural Area Delivery Time is: 5 - 10 days \n\n Parcel Delivery or dispatched store depends on working business days/hrs\n\n For choice of courier service please write us via: email, whatsapp or call with your order id and customer id."
                            android:textColor="#000000"
                            android:textSize="@dimen/_10sdp"/>


                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>


        </ScrollView>

        <Button
            android:id="@+id/cnt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:text="Continue"
            android:textColor="@color/white"
            android:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>
