<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="9"
    tools:context=".welcome_screen.WelcomeActivity">

    <ImageView
        android:background="#30000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/welcomeViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <Button
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_120sdp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnLogin"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_40sdp"/>

    <Button
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:id="@+id/skipAndContinue"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_40sdp"/>

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/circleIndicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        app:ci_drawable="@drawable/white_round_icon"
        app:ci_drawable_unselected="@drawable/slider_icon_inactive" />

</RelativeLayout>